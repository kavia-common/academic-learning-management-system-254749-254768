# Frontend environment configuration for lms_frontend

# Required for Supabase client
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-anon-key

# Used for auth email redirect and CORS hint headers
REACT_APP_FRONTEND_URL=http://localhost:3000

# Optional backend integration (enable via feature flags)
REACT_APP_BACKEND_URL=http://localhost:8000

# Feature flags (JSON string)
# Example to enable backend passthrough and direct Supabase:
# {"use_backend": true, "use_direct_supabase": true}
REACT_APP_FEATURE_FLAGS={"use_backend": false, "use_direct_supabase": true}

# Optional healthcheck path (default /api/v1/health)
# REACT_APP_HEALTHCHECK_PATH=/api/v1/health
